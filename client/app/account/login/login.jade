div(ng-include='"components/navbar/navbar.html"')
.container
  .row
    .col-sm-4
    .col-sm-4
      h1 Login
      hr
  .row
    .col-sm-4
    .col-sm-4
      form.form(name='form', ng-submit='login(form)', novalidate='')
        .form-group(ng-class='{ "has-success": form.email.$valid,\
        "has-error": (form.email.$error.email || form.email.$error.required) && submitted }')
          label Email
          input.form-control(type='email', name='email', ng-model='user.email', required=true)
        .form-group(ng-class='{ "has-success": form.password.$valid,\
        "has-error": form.password.$error.required && submitted }')
          label Password
          input.form-control(type='password', name='password', ng-model='user.password', required=true)

        .form-group.has-error
          p.help-block(ng-show='(form.email.$error.required || form.password.$error.required) && submitted')
            | Please enter your email and password.
          p.help-block {{ errors.other }}

        p
          a(ui-sref='forgot_password') Forgot your password?

        hr
        div
          button.btn.btn-primary.btn-lg.btn-login(type='submit')
            | Login
          = ' '
          a.btn.btn-default.btn-lg.btn-register(ui-sref='signup')
            | Register
