div(ng-include='"components/navbar/navbar.html"')
.container
  .row
    .col-sm-4
    .col-sm-4
      h1 Account Recovery
      hr
  .row
    .col-sm-4
    .col-sm-4
      form.form(role='form', name='form', ng-submit='forgotPassword(form)', novalidate='', ng-hide="success")
        .form-group(ng-class='{ "has-success": form.email.$valid && submitted,\
        "has-error": (form.email.$error.mongoose || form.email.$error.required || form.email.$error.email ) && submitted }')
          label(for="email") Email
          input.form-control#email(type='email', name='email', ng-model='email', placeholder='ex. me@awesome.com', mongoose-error='', required='')
          p.help-block(ng-show='(form.email.$error.required || form.email.$error.email) && submitted && !form.email.$error.mongoose')
            | Email not valid
          p.help-block(ng-show='form.email.$error.mongoose')
            | {{ errors.email }}

        p.help-block  {{ message }}
        button.btn.btn-lg.btn-primary(type='submit') Submit
        div(style="padding-bottom:30px")
      p.help-block(ng-show='success') {{ message }}
