section.top
  height 5%
  background #eff

section.main
  height 80%
  
  .message-container
    overflow hidden
    padding 20px

section.bottom
  height 15%
  
  .command-box
    padding 10px

// Display flex (equalizer like foundation, only better but with limited browser support)
.row-xs-flex 
  display flex
  display -webkit-flex
  display -moz-flex
  display -ms-flex

@media (min-width: 768px)
  .row-sm-flex
    display flex
  
@media (min-width: 992px) 
  .row-md-flex 
    display flex

@media (min-width: 1200px) 
  .row-lg-flex 
    display flex

.equalizer
  height 100%

// Messages
.message
  padding-bottom 10px
  
.system-message
  color #aaa

.system-chat
  color green
  font-weight bold